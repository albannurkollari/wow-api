{
  "name": "wow-api",
  "private": true,
  "description": "WoW APIs consumer web app",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "author": "Alban Nurkollari",
  "contributors": [
    {
      "name": "Alban Nurkollari",
      "email": "albannurkollari@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albannurkollari/wow-api.git"
  },
  "bugs": {
    "url": "https://github.com/albannurkollari/wow-api/issues"
  },
  "homepage": "https://github.com/albannurkollari/wow-api#readme",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "prettier --write",
    "nodeTS": "node -r ts-node/register --loader ts-node/esm --no-warnings",
    "nodeTS:debug": "pnpm nodeTS --inspect-brk --watch",
    "ts:check": "tsc --noEmit",
    "setClientAccessToken": "pnpm nodeTS scripts/wow-client-token.ts",
    "query": "pnpm nodeTS scripts/wow.ts",
    "query:debug": "pnpm nodeTS:debug scripts/wow.ts",
    "install:hooks": "node scripts/git-hooks.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.6",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "change-case": "^5.4.2",
    "dotenv": "^16.4.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}
