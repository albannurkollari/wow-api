{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "#constants": ["src/constants"],
      "#constants/*": ["src/constants/*"]
    }
  },
  "include": ["scripts", "src/constants/**/*.ts"]
}
